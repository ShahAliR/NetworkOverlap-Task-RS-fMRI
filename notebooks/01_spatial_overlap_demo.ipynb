# %% [markdown]
# # Spatial Overlap Analysis Demo
# 
# This notebook demonstrates the spatial overlap analysis between resting-state functional connectivity and task activation maps.
# 
# ## Setup and Imports

# %%
import sys
import os
sys.path.append('../scripts')  # Add scripts to path

import numpy as np
import nibabel as nib
import matplotlib.pyplot as plt
from nilearn import plotting, image
import yaml

from spatial_overlap_analysis import (
    load_and_align_maps, 
    compute_spatial_metrics,
    threshold_sensitivity_analysis,
    save_results
)

# %% [markdown]
# ## 1. Load Configuration

# %%
# Load configuration
with open('../config/example_OLM_rOTC.yaml', 'r') as f:
    config = yaml.safe_load(f)

print("Analysis:", config['description'])
print("Task map:", config['paths']['task_map'])
print("Output directory:", config['paths']['output_dir'])

# %% [markdown]
# ## 2. Load and Visualize Data

# %%
# Load the data
task_img, rest_img, mask, affine = load_and_align_maps(
    config['paths']['task_map'],
    config['paths']['rest_map'], 
    config['paths'].get('mask')
)

task_data = task_img.get_fdata()
rest_data = rest_img.get_fdata()

print(f"Task data shape: {task_data.shape}")
print(f"Task data range: {task_data.min():.3f} to {task_data.max():.3f}")
print(f"Rest data range: {rest_data.min():.3f} to {rest_data.max():.3f}")

# %%
# Visualize the input maps
fig, axes = plt.subplots(1, 2, figsize=(15, 5))

# Task map
plotting.plot_stat_map(
    task_img, 
    title="Task Activation Map", 
    axes=axes[0],
    cut_coords=[0, 0, 0],
    display_mode='ortho'
)

# Resting-state map  
plotting.plot_stat_map(
    rest_img,
    title="Resting-State Connectivity Map",
    axes=axes[1],
    cut_coords=[0, 0, 0],
    display_mode='ortho'
)

plt.tight_layout()
plt.show()

# %% [markdown]
# ## 3. Run Spatial Overlap Analysis

# %%
# Calculate binary thresholds
from scipy.stats import t

task_binary_thresh = t.ppf(1 - config['analysis']['binary_threshold_alpha']/2, 
                          config['analysis']['task_df'])
rest_binary_thresh = t.ppf(1 - config['analysis']['binary_threshold_alpha']/2, 
                          config['analysis']['rest_df'])

print(f"Binary thresholds - Task: t > {task_binary_thresh:.3f}, Rest: t > {rest_binary_thresh:.3f}")

# %%
# Compute spatial metrics
dice, correlation, corr_p, task_bin, rest_bin = compute_spatial_metrics(
    task_data, rest_data, mask, task_binary_thresh, rest_binary_thresh
)

print("SPATIAL OVERLAP RESULTS:")
print(f"Dice Coefficient: {dice:.4f}")
print(f"Spatial Correlation: r = {correlation:.4f} (p = {corr_p:.6f})")
print(f"Task significant voxels: {np.sum(task_bin)}")
print(f"Rest significant voxels: {np.sum(rest_bin)}") 
print(f"Overlapping voxels: {np.sum(task_bin & rest_bin)}")

# %% [markdown]
# ## 4. Threshold Sensitivity Analysis

# %%
# Run sensitivity analysis
thresholds, dice_values = threshold_sensitivity_analysis(
    task_data, rest_data, mask,
    min_t=config['sensitivity_analysis']['min_t'],
    max_t=config['sensitivity_analysis']['max_t'], 
    step=config['sensitivity_analysis']['step']
)

# Plot results
plt.figure(figsize=(10, 6))
plt.plot(thresholds, dice_values, 'b-o', linewidth=2, markersize=4)
plt.axvline(x=config['analysis']['task_fwe_threshold'], color='r', linestyle='--',
           label=f'FWE Task Threshold')
plt.axvline(x=config['analysis']['rest_fwe_threshold'], color='g', linestyle='--',
           label=f'FWE Rest Threshold')
plt.axvline(x=task_binary_thresh, color='orange', linestyle=':',
           label=f'Binary Task Threshold')
plt.xlabel("t-threshold")
plt.ylabel("Dice Coefficient")
plt.title("Threshold Sensitivity Analysis")
plt.legend()
plt.grid(True, alpha=0.3)
plt.show()

# %% [markdown]
# ## 5. Create Overlap Visualization

# %%
# Create overlap maps
task_only = (task_bin == 1) & (rest_bin == 0)
rest_only = (rest_bin == 1) & (task_bin == 0)
overlap = (task_bin == 1) & (rest_bin == 1)

# Combined map for visualization
combined_map = np.zeros_like(task_bin, dtype=np.int16)
combined_map[task_only] = 1    # Task only
combined_map[rest_only] = 2    # Rest only  
combined_map[overlap] = 3      # Both

# Create NIfTI images
task_only_img = nib.Nifti1Image(task_only.astype(np.int16), affine)
rest_only_img = nib.Nifti1Image(rest_only.astype(np.int16), affine)  
overlap_img = nib.Nifti1Image(overlap.astype(np.int16), affine)
combined_img = nib.Nifti1Image(combined_map, affine)

# %%
# Visualize the overlap
fig, axes = plt.subplots(2, 2, figsize=(15, 12))

# Task-specific regions
plotting.plot_stat_map(
    task_only_img,
    title="Task-Specific Regions",
    axes=axes[0, 0],
    cut_coords=[0, 0, 0],
    display_mode='ortho',
    cmap='Reds'
)

# Rest-specific regions
plotting.plot_stat_map(
    rest_only_img, 
    title="Rest-Specific Regions",
    axes=axes[0, 1],
    cut_coords=[0, 0, 0],
    display_mode='ortho',
    cmap='Blues'
)

# Overlap regions
plotting.plot_stat_map(
    overlap_img,
    title="Overlap Regions", 
    axes=axes[1, 0],
    cut_coords=[0, 0, 0],
    display_mode='ortho',
    cmap='Greens'
)

# Combined map
plotting.plot_stat_map(
    combined_img,
    title="Combined Map\n(Red=Task, Blue=Rest, Green=Overlap)",
    axes=axes[1, 1],
    cut_coords=[0, 0, 0], 
    display_mode='ortho',
    cmap='viridis'
)

plt.tight_layout()
plt.show()

# %% [markdown]
# ## 6. Save Results (Optional)

# %%
# Prepare results dictionary
results = {
    'dice': dice,
    'correlation': correlation,
    'corr_p': corr_p,
    'thresholds': thresholds,
    'dice_values': dice_values,
    'task_voxels': np.sum(task_bin),
    'rest_voxels': np.sum(rest_bin),
    'overlap_voxels': np.sum(overlap),
    'task_binary_thresh': task_binary_thresh,
    'rest_binary_thresh': rest_binary_thresh,
    'maps': [
        ('task_specific', task_only.astype(np.int16), affine),
        ('rest_specific', rest_only.astype(np.int16), affine),
        ('overlap', overlap.astype(np.int16), affine),
        ('combined_map', combined_map, affine),
    ]
}

# Save results
save_results(results, config)

print(f"Results saved to: {config['paths']['output_dir']}")

# %% [markdown]
# ## Summary
# 
# This analysis successfully quantified the spatial overlap between task activation and resting-state connectivity patterns. The results can inform target selection for neuromodulation studies.